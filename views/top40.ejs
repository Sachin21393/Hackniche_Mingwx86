<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600&display=swap"
      rel="stylesheet"
    />

    <title>Hello, world!</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        font-family: "Poppins", sans-serif;
      }
      body {
        padding-bottom: 7%;
      }
      .polaroid {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
          0 6px 20px 0 rgba(0, 0, 0, 0.19);
      }
      .grid-container {
        display: grid;
        gap: 2% 2%;
        grid-template-columns: auto auto;
        flex-direction: row;
      }

      .grid-item {
        padding: 1.5%;
        box-shadow: 0 0.2rem 1.2rem rgba(0, 0, 0, 0.2);
        border-radius: 15px;
      }
/* 
      .flex-item-right {
        padding: 1.5%;
        flex: 50%;
        box-shadow: 0 0.2rem 1.2rem rgba(0, 0, 0, 0.2);
        border-radius: 15px;
      } */
      .btnad {
        margin-left: 1%;
        margin-right: 1%;
        width: 50%;
      }

      /* Responsive layout - makes a one column-layout instead of two-column layout */
      @media (max-width: 800px) {
        .flex-container {
          flex-direction: column;
        }
      }
    </style>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-light"
      style="background-color: white"
    >
      <div class="container">
        <a class="navbar-brand" href="#">HACKERWORLD</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#"
                >HACKERWORLD</a
              >
            </li> -->
          </ul>
          <form class="d-flex navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#"
                >Oraganize a Hackathon</a
              >
            </li>
          </form>
        </div>
      </div>
    </nav>
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item mx-auto" role="presentation">
        <div class="container d-flex " style="margin-left: 2%;" >
          <form action="/filter1" method="post">
          <input type="hidden" id="filter" name="filter" value="">
        <button
        type="submit"
          class="nav-link active me-2"
          id="project"
          data-bs-toggle="pill"
          data-bs-target="#pills-home"
          type="button"
          role="tab"
          aria-controls="pills-home"
          aria-selected="true"
          value="project"
          onclick="f()"
        >
          Project
        </button>
        <button 
        type="submit"
          class="nav-link active"
          id="work"
          data-bs-toggle="pill"
          data-bs-target="#pills-home"
          type="button"
          role="tab"
          aria-controls="pills-home"
          aria-selected="true"
          value="work"
          onclick="f1()"
        >
          WorkExp
        </button>
      </form>
     
        </div>
      </li>

      <li class="nav-item mx-auto" role="presentation">

        <form action="/filter" method="post">
          <div class="input-group">
            <div class="form-outline">
              <input type="search" id="form1" name="no" class="form-control" placeholder="Enter no of top team to filter"/>
              <!-- <label class="form-label" for="form1">Search</label> -->
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100px;height: 37px;">
              <i class="fa fa-search"></i>
            </button>
          </div>
          <!-- <p>Top</p><input type="text" name="no">
        <button
        type="submi"
          class="nav-link"
          id="pills-contact-tab"
        >
          
        </button> -->
      </form>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
   
      <div
        class="tab-pane fade show active"
        id="pills-home"
        role="tabpanel"
        aria-labelledby="pills-home-tab"
      >
    

     
        <div class="container">
          
          <div class="grid-container">
            <% data.forEach(ele=>{ %>
              <form action="/detailsTeam" method="post">
            <div class="grid-item">
              <input type="hidden" name="teamId" value="<%=ele._id%>">
              <div class="container-fluid">
                <h3 class="text-center"><%=ele.teamname%></h3>
                <hr />
                <div class="d-flex">
                  <a
                    href=""
                    style="
                      text-decoration: none;
                      margin-right: 20%;
                      margin-left: 20%;
                    "
                    ><p class="fs-4">Schedule</p></a
                  >
                 <button type="submit">
                    Details
                  
                </button>
                </div>
                <hr style="margin-top: 0" />
                <p class="fs-5 mt-2" style="margin-left: 1%">
                  Frontend Score:<%=ele.frontendScore%> <br />
                  Backend Score:<%=ele.backendScore%> <br />
                  Overall Score: <%=ele.overAll%>
                </p>

                <div class="d-flex mt-2">
                  <form action="/accept" method="post">
                  <button type="submit" class="btn btn-success btnad">Accept</button>
                </form>
                <form action="/reject" method="post">
                  <button type="submit" class="btn btn-danger btnad">Decline</button>
                </form>
                </div>
              </div>
            </div>
          </form>
            <%  }) %>
            <!-- <div class="flex-item-">
              <div class="container-fluid">
                <h3>HackUpar</h3>
              </div>
            </div> -->
          </div>
          
        </div>

      </div>

      <div
        class="tab-pane fade"
        id="pills-contact"
        role="tabpanel"
        aria-labelledby="pills-contact-tab"
      >
        <div class="container">
          <div class="flex-container">
            <div class="flex-item-left">
              <div class="container-fluid">
                <h3 class="mt-1">Team Name: MinGWx86</h3>
                <p class="fs-5" style="margin-left: 1%">
                  Frontend Score: <br />
                  Backend Score: <br />
                  Overall Score:
                </p>

                <div class="d-flex">
                  <button class="btn btn-primary btnad">Schedule</button>
                  <button class="btn btn-primary btnad">Reschedule</button>
                </div>

                <div class="d-flex mt-2">
                  <button class="btn btn-success btnad">Accept</button>
                  <button class="btn btn-danger btnad">Decline</button>
                </div>
              </div>
            </div>

            <div class="flex-item-right">
              <div class="container-fluid">
                <h3>HackNiche</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script>
      function f(){
        let temp=document.getElementById("project").value;
        document.getElementById("filter").value=temp
      }
      function f1(){
       let temp=document.getElementById("work").value
        document.getElementById("filter").value=temp
      }
    </script>
  </body>
</html>
